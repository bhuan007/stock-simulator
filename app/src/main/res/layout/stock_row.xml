<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:orientation="horizontal"
    android:id="@+id/stockView">

    <View android:id="@+id/PriceIndicator"
        android:layout_width="8dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:visibility="visible"/>


    <TextView
        android:id="@+id/Symbol"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:text="Symbol"
        android:textAlignment="center"/>

    <HorizontalScrollView
        android:id="@+id/ListScroller"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/ListDetails"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/Open"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:padding="15dp"
                android:text="Open"
                android:textAlignment="center"/>

            <TextView
                android:id="@+id/High"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:padding="15dp"
                android:text="High"
                android:textAlignment="center"/>

            <TextView
                android:id="@+id/Low"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:padding="15dp"
                android:text="Low"
                android:textAlignment="center"/>

            <TextView
                android:id="@+id/Price"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:padding="15dp"
                android:text="Price"
                android:textAlignment="center"/>

            <TextView
                android:id="@+id/Volume"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:padding="15dp"
                android:text="Volume"
                android:textAlignment="center"/>

            <TextView
                android:id="@+id/PreviousClose"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:padding="15dp"
                android:text="PreviousClose"
                android:textAlignment="center"/>

            <TextView
                android:id="@+id/Change"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:padding="15dp"
                android:text="Change"
                android:textAlignment="center"/>

            <TextView
                android:id="@+id/ChangePercent"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:padding="15dp"
                android:text="ChangePercent"
                android:textAlignment="center"/>

        </LinearLayout>

    </HorizontalScrollView>



</LinearLayout>