<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:id="@+id/stockView"
    app:cardCornerRadius="4dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true"
    android:background="#dadce0">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View android:id="@+id/PriceIndicator"
            android:layout_width="8dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:visibility="visible"/>


        <TextView
            android:id="@+id/Symbol"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:padding="15dp"
            android:text="Symbol"
            android:gravity="center"/>

        <HorizontalScrollView
            android:id="@+id/ListScroller"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">

            <LinearLayout
                android:id="@+id/ListDetails"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" >

                <TextView
                    android:id="@+id/Open"
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:padding="15dp"
                    android:text="Open"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/High"
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:padding="15dp"
                    android:text="High"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/Low"
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:padding="15dp"
                    android:text="Low"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/Price"
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:padding="15dp"
                    android:text="Price"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/Volume"
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:padding="15dp"
                    android:text="Volume"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/PreviousClose"
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:padding="15dp"
                    android:text="PreviousClose"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/Change"
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:padding="15dp"
                    android:text="Change"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/ChangePercent"
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:padding="15dp"
                    android:text="ChangePercent"
                    android:gravity="center"/>

            </LinearLayout>

        </HorizontalScrollView>

    </LinearLayout>



</androidx.cardview.widget.CardView>